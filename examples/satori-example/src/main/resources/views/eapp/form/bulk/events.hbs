{{#partial "title"}}Bulk Events Edit{{/partial}}

{{#partial "content"}}

<div class="row">
  <div class="span2">
    <ul class="nav nav-pills nav-stacked">
      <li class="active"><a href="#">Bulk edit</a></li>
      <li><a href={{@"/eapp/events/form/delete"}}>Bulk Delete</a></li>
    </ul>
  </div>
  <div class="span6">
{{> eapp/layout/flash}}
{{#form "/eapp/events/form"}}

  {{#each .}}
    {{#fieldset legend=title}}
     {{#group label="title" error=errors.title}}
        {{input name="title" value=title class="input span4"}}
     {{/group}}
     {{#group label="description" error=errors.description}}
        {{textarea name="description" value=description rows="4" limit="500" class="input span4"}}
     {{/group}}
     {{input type="hidden" name="id" value=id}}
    {{/fieldset}}
  {{/each}}
  
  <div class="form-actions">
      <button type="submit" class="btn btn-primary">Save changes</button>
      <a href={{@"/eapp"}} class="btn">Cancel</a>
  </div>

{{/form}}
</div>
</div>

{{/partial}}
{{> eapp/layout/base}}
