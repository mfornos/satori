<link rel="stylesheet" href={{@ "/assets/css/pagination.css"}}/>
<link rel="stylesheet" href={{@"/assets/styles/ext/fancy/jquery.fancybox.css"}}/>
<link rel="stylesheet" href={{@ "/assets/styles/metro/metro.css"}}/>
<script type="text/javascript" src={{@ "assets/js/libs/jquery.min.js"}}></script>
<script type="text/javascript" src={{@"assets/js/libs/jquery.mousewheel-3.0.6.pack.js"}}></script>
<script type="text/javascript" src={{@"assets/js/libs/jquery.pagination.js"}}></script>
<script type="text/javascript" src={{@"assets/js/libs/jquery.fancybox.pack.js"}}></script>
<script type="text/javascript" src={{@"assets/js/libs/jquery.scrollbar.min.js"}}></script>
<script type='text/javascript' src='https://www.google.com/jsapi'></script>
<script>
  google.load('visualization', '1', {
    'packages': ['geochart']
  });

  // Global & dirty variables, son 
  var data, chart;

  $(function () {

    var MetroApp = function () {
      this.init();
    }
    MetroApp.prototype = {
      init: function () {
        var that = this,
          options = {};
        $("#pagination-holder").pagination({
          items: {{itemsNum}},
          itemsOnPage: {{itemsPerPage}},
          currentPage: {{currentPage}},
          displayedPages: 7,
          cssStyle: 'compact-theme',
          onClick: function (page, e) {
            $('#land').hide().load(that.buildQuery(page - 1) + ' #page-content', function (responseText, textStatus, XMLHttpRequest) {
              jQuery.globalEval($(responseText).filter('script#map-data').html());
              chart.draw(google.visualization.arrayToDataTable(data), options);
            }).fadeIn();
          }
        });

        $(".fancy").fancybox({
          fitToView: true,
          width: '100%',
          height: '100%',
          autoSize: false,
          closeClick: false,
          openEffect: 'none',
          closeEffect: 'none',
          nextEffect: 'none',
          prevEffect: 'fade',
          mouseWheel: false,
          afterLoad: function () {
        	  setTimeout(function() {
              $(".fancybox-inner").jScrollPane();
        	  },0);
          }
        });

        chart = new google.visualization.GeoChart(document.getElementById('chart_div'));
        google.setOnLoadCallback(function () {
          chart.draw(google.visualization.arrayToDataTable(data), options);
        });
      },
      buildQuery: function (p) {
        var requestUri = "{{uriInfo.requestUri}}";
        var regex = /p=[\d*]?/gi;
        if (requestUri.indexOf("q=") != -1) {
          if (requestUri.indexOf("p=") == -1) requestUri += "&p=" + p;
          else requestUri.replace(regex, p);
        } else {
          if (requestUri.indexOf("p=") == -1) requestUri += "?p=" + p;
          else requestUri.replace(regex, p);
        }
        return requestUri;
      }
    }

    var App = new MetroApp();

  });
</script>
